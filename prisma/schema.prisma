// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Siswa {
  id Int @default(autoincrement()) @id
  nama String
  alamat String
  kelas Kelas? @relation(fields: [kelasId], references: [id])
  kelasId Int?
}

model Kelas {
  id Int @default(autoincrement()) @id
  nama String
  wali String
  siswa Siswa[]
}